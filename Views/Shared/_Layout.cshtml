<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityVeterinary</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CityVeterinary.styles.css" asp-append-version="true" />
    <link href="~/css/fastbootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">

    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"> *@
    <link href="~/css/boxicons.css" rel='stylesheet'>
    <link href="~/css/dataTables.dataTables.min.css">
    <link href="~/css/select2.min.css">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <!-- Or for RTL support -->
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css" />
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200&family=Open+Sans:ital,wght@0,400;0,600;0,700;1,500;1,600;1,700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css"
        integrity="sha512-NXUhxhkDgZYOMjaIgd89zF2w51Mub53Ru3zCNp5LTlEzMbNNAjTjDbpURYGS5Mop2cU4b7re1nOIucsVlrx9fA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container-fluid p-0">
        <div class="">

            <aside class="border-0">
                <div class="sidebar-pos shadow-lg">
                    <div class="" id="sidebar">
                        <div class="sidenav-top">
                            <div class=" py-4 sidebar-topImage">
                                <img src="/img/logo.png" alt="" width="40" height="40">
                            </div>

                        </div>
                        @* Web View *@
                        <ul class="border-0 list-group px-4" id="myTab">
                            <div class="mt-5">
                                <li class="side-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index"
                                        class="text-decoration-none nav-active" aria-current="page">
                                        <i class="bx bxs-dashboard icon  mx-3"></i>
                                        <span class="text">Dashboard</span>
                                    </a>

                                </li>
                                <li class="side-item" id="link">
                                    <a asp-area="" asp-controller="Swagger" asp-action="Index"
                                        class="text-decoration-none nav-active" aria-current="page">
                                        <i class="bx bxs-folder-plus icon  mx-3"></i>
                                        <span class="text">Api</span>
                                    </a>

                                </li>
                                <span class="fw-semibold ms-2 mt-4"> Input Data</span>

                                <li class="side-item" id="link">
                                    <a asp-asp-area="" asp-controller="PetOwners" asp-action="PetAndOwnerAdd"
                                        class="text-decoration-none nav-active " aria-current="page">
                                        <i class=" bx bxs-buildings icon  mx-3 "></i>
                                        <span class="text">Pet Services</span>
                                    </a>
                                </li>
                                <li class="side-item" id="link">
                                    <a asp-asp-area="" asp-controller="PetOwners" asp-action="Index"
                                        class="text-decoration-none nav-active " aria-current="page">
                                        <i class=" bx bxs-user icon  mx-3 "></i>
                                        <span class="text">Pet Owners</span>
                                    </a>
                                </li>
                                <li class="side-item" id="link">
                                    <a asp-asp-area="" asp-controller="PetInfo" asp-action="Index"
                                        class="text-decoration-none nav-active " aria-current="page">
                                        <i class=" bx bxs-dog icon  mx-3 "></i>
                                        <span class="text">Pet Information</span>
                                    </a>

                                </li>



                                <span class="fw-semibold ms-2 mt-4"> More</span>

                                <li class="side-item">
                                    <a class="text-decoration-none" data-bs-toggle="collapse"
                                        href="#collapseExampletools" role="button" aria-expanded="false"
                                        aria-controls="collapseExample">

                                        <i class=" bx bxs-grid icon  mx-3 "></i>
                                        <span class="text">Tools</span>
                                        <i class='bx bx-chevron-down icon ms-5'></i>
                                    </a>
                                </li>

                                <div class="collapse mt-3" id="collapseExampletools">
                                    <div class=" ms-4">
                                        <ul class="list-group border-0">
                                            <li class="side-item">
                                                <a asp-asp-area="" asp-controller="Encoder" asp-action="Index"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bxs-group bx-flip-horizontal icon  mx-3 "></i>
                                                    <span class="text">Encoder</span>
                                                </a>

                                            </li>
                                            <li class="side-item">
                                                <a asp-asp-area="" asp-controller="Baranggay" asp-action="Index"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class=" bx bxs-buildings icon  mx-3 "></i>
                                                    <span class="text">Baranggay</span>
                                                </a>

                                            </li>

                                        </ul>

                                    </div>
                                </div>
                                <li class="side-item">
                                    <a class="text-decoration-none" data-bs-toggle="collapse" href="#collapseExample"
                                        role="button" aria-expanded="false" aria-controls="collapseExample">

                                        <i class=" bx bxs-grid icon  mx-3 "></i>
                                        <span class="text">Components</span>
                                        <i class='bx bx-chevron-down icon ms-5'></i>
                                    </a>
                                </li>

                                <div class="collapse mt-3" id="collapseExample">
                                    <div class=" ms-4">
                                        <ul class="list-group border-0">
                                            <li class="side-item">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="PetTypes"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bxs-dog icon mx-3"></i>
                                                    <span class="text">Pet Type</span>
                                                </a>

                                            </li>
                                            <li class="side-item">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="BreedTypes"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bx-list-plus icon mx-3 "></i>
                                                    <span class="text">Breed Type</span>
                                                </a>

                                            </li>
                                            <li class="side-item">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="ServiceType"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bx-task icon mx-3 mt-2"></i>
                                                    <span class="text">Services Type</span>
                                                </a>

                                            </li>

                                        </ul>

                                    </div>
                                </div>


                                <li class="side-item sidebar-li">
                                    <a class="text-decoration-none" data-bs-toggle="collapse" href="#collapseExamplevax"
                                        role="button" aria-expanded="false" aria-controls="collapseExample">
                                        <i class=" bx bx-clinic icon mx-3 "></i>
                                        <span class="text">Vaccine</span>
                                        <i class='bx bx-chevron-down icon ms-5'></i>

                                    </a>
                                </li>

                                <div class="collapse mt-3" id="collapseExamplevax">
                                    <div class=" ms-4">
                                        <ul class="list-group border-0">

                                            <li class="side-item sidebar-li">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="VaccineType"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bxs-injection icon mx-3 "></i>
                                                    <span class="text">Vaccine Type</span>
                                                </a>

                                            </li>

                                            <li class="side-item sidebar-li">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="Vaccinator"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bx-plus-medical icon mx-3 "></i>
                                                    <span class="text">Vaccinator</span>
                                                </a>

                                            </li>
                                            <li class="side-item sidebar-li">
                                                <a asp-asp-area="" asp-controller="Components" asp-action="Veterinarian"
                                                    class="text-decoration-none link" aria-current="page">
                                                    <i class="bx bx-plus-medical icon mx-3 "></i>
                                                    <span class="text">Veterinarian</span>
                                                </a>

                                            </li>

                                        </ul>

                                    </div>
                                </div>


                            </div>
                        </ul>
                        @* Web End View *@
                    </div>
                </div>
            </aside>


            <main class="layout-main ps-2 pe-4" id="main-page">
                <div class="layout-page">

                    <nav class="navbar layout-navbar navbar-expand-lg d-flex">
                        <div class="container-fluid">
                            <div class="openbtn mt-2" data-bs-toggle="collapse" data-bs-target="#navbarExample"
                                aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
                                <span></span><span></span><span></span>
                            </div>

                            <div class="mobile-nav-avatar">
                                <!-- bx-tada additional in boxicon to animate-->
                                <i class='bx bxs-bell-ring bx-tada text-white me-2'></i>
                                <div class="avatar avatar-online" id="mobile-avatar">
                                    <span class="avatar text-bg-secondary">OP</span>
                                </div>
                            </div>

                            <div class="collapse navbar-collapse flex-row-reverse border-bottom  pb-5 mb-6"
                                id="navbarExample">
                                <!-- mobile nav -->
                                <div class="mobile-nav-space">
                                    <ul class="navbar-nav me-auto mb-0 px-5" id="mobile-nav">
                                        <a href="#" class="text-decoration-none mb-3 link" aria-current="page">
                                            <li class="">
                                                <i class="bx bxs-dashboard text-white me-3"></i>
                                                <span class="text-white">Dashboaasfasfrd</span>
                                            </li>
                                        </a>
                                        <a asp-controller="Swagger" asp-action="Index"
                                            class="text-decoration-none link mb-3" aria-current="page">
                                            <li class="">
                                                <i class="bx bxs-folder-plus text-white me-3"></i>
                                                <span class="text-white">Api</span>
                                            </li>
                                        </a>
                                        <a href="#" class="text-decoration-none mb-3" aria-current="page">
                                            <li class="">
                                                <i class="bx bxs-folder-plus text-white me-3"></i>
                                                <span class="text-white">Classes</span>
                                            </li>
                                        </a>

                                    </ul>
                                </div>
                                <!--end mobile nav -->

                                <!-- Web notification -->
                                <div class="d-flex align-self-end flex-column flex-lg-row ">

                                    <li class="nav-item navbar-dropdown dropdown-user dropdown">

                                        <a class="nav-link dropdown-toggle hide-arrow " data-bs-toggle="dropdown">
                                            <!-- bx-tada additional in boxicon to animate-->
                                            <div id="web">
                                                <i class='bx bxs-bell-ring bx-tada me-10 mt-2'>
                                                    <span
                                                        class="position-absolute top-0 start-100 translate-middle p-1 text-bg-danger border border-light rounded-circle">
                                                        <span class="visually-hidden">New alerts</span>
                                                    </span>
                                                </i>
                                            </div>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item " href="#">
                                                    <i class="bx bx-user me-2"></i>
                                                    <small>Juan D. <span class="badge bg-danger ms-5">New</span></small>
                                                </a>
                                            </li>

                                        </ul>

                                        <a class="nav-link dropdown-toggle hide-arrow " data-bs-toggle="dropdown">
                                            <!-- bx-tada additional in boxicon to animate-->
                                            <div id="web">

                                                <div class="avatar avatar-online" id="web-avatar">
                                                    <span class="avatar text-bg-secondary">OP</span>
                                                </div>
                                            </div>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <i class="bx bx-user me-2"></i>
                                                    <span class="align-middle">My Profile</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item " href="#">
                                                    <i class="bx bx-cog me-2"></i>
                                                    <span class="align-middle">Settings</span>
                                                </a>
                                            </li>

                                            <li>
                                                <div class="dropdown-divider"></div>
                                            </li>
                                            <li>
                                                <a class="dropdown-item logout" href="javascript:void(0);">
                                                    <i class="bx bx-power-off me-2"></i>
                                                    <span class="align-middle">Log Out</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </div>
                                <!-- End notification -->

                            </div>
                        </div>
                    </nav>
                </div>
                <!-- main content -->
                <div>
                    @RenderBody()
                </div>
                <!--end main content -->
            </main>
        </div>
        @* <div class="footer pt-10">
        <div class="">

        </div>
        </div> *@
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"
        integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/fastbootstrap.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
